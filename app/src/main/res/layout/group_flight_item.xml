<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="10"
            >

            <TextView
                android:id="@+id/DepTime_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="10:20"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/OrgCityName_txt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="虹桥(T2)"
                android:textColor="@color/gray_color"
                android:textSize="12sp" />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="9"
            >

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@mipmap/flight_item_img"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 android:layout_weight="1"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/ArvTime_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center|bottom"
                    android:text="10:20"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/DstCityName_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="虹桥(T2)"
                    android:textColor="@color/gray_color"
                    android:textSize="12sp" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.3"
                >

                <TextView
                    android:id="@+id/lowestPrice_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/font_size_10"
                    android:text="¥3600"
                    android:textColor="@color/chengse"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/item_up_down"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignEnd="@+id/lowestPrice_txt"
                    android:layout_alignRight="@+id/lowestPrice_txt"
                    android:layout_below="@+id/lowestPrice_txt"
                    app:srcCompat="@mipmap/item_down" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_size_25"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/flight_icon"
            android:layout_width="@dimen/font_size_20"
            android:layout_height="@dimen/font_size_20"
            app:srcCompat="@mipmap/flight_ca"
            android:layout_marginLeft="@dimen/font_size_28"
            />

        <TextView
            android:id="@+id/flight_content_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/font_size_5"
            android:gravity="center_vertical"
            android:text="国际航空 CA1890 | 772"
            android:textColor="@color/gray_color"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
