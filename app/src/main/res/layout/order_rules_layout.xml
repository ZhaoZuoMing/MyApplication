<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/r_line_1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            />
        <!--预订规则-->
        <LinearLayout
            android:id="@+id/room_order_rule_ly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="预订规则:"
                android:layout_marginLeft="@dimen/font_size_16"
                android:layout_marginTop="@dimen/font_size_10"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/flight_green_txt_color"
                />
            <TextView
                android:id="@+id/order_room_rules"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="@dimen/font_size_16"
                android:layout_marginBottom="@dimen/font_size_10"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            />
        <!--酒店变更规则-->
        <LinearLayout
            android:id="@+id/room_orderchange_rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="变更规则:"
                android:layout_marginLeft="@dimen/font_size_16"
                android:layout_marginTop="@dimen/font_size_10"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/flight_green_txt_color"
                />
            <TextView
                android:id="@+id/order_room_change_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="@dimen/font_size_16"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/font_size_10"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            />
        <!--担保规则-->
        <LinearLayout
            android:id="@+id/room_orderdanbao_rules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="担保规则:"
                android:layout_marginLeft="@dimen/font_size_16"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="5dp"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/flight_green_txt_color"
                />
            <TextView
                android:id="@+id/order_room_danbao_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/font_size_16"
                android:layout_marginBottom="@dimen/font_size_10"
                android:textColor="@color/black"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
