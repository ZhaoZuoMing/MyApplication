<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/font_size_10"
        android:layout_marginRight="@dimen/font_size_10"
        android:layout_marginTop="@dimen/font_size_10"
        android:background="@drawable/train_shape_right"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_marginTop="@dimen/font_size_10"
            android:orientation="horizontal">

            <com.myviews.RoundRectImageView
                android:id="@+id/H_order_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/font_size_5"
                android:background="@mipmap/hotel_list_icon" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                >
            <TextView
                android:id="@+id/H_order_adapter_hotelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="上海浦东福特达尔维斯酒店(新国际博览中心，近世纪大道)"
                android:textColor="@color/gray_color"
                android:textSize="@dimen/font_size_16"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toLeftOf="@+id/H_order_adapter_hotelPrice"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/H_order_adapter_hotelPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥130"
                android:textColor="@color/chengse"
                android:textSize="@dimen/font_size_16"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="@dimen/font_size_16"
                android:layout_marginEnd="@dimen/font_size_16" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/H_order_adapter_RoomType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="商务大床房" />

            <TextView
                android:id="@+id/H_order_adapter_status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/font_size_16"
                android:gravity="right|center_vertical"
                android:text="已确认"
                android:textStyle="bold" />
        </LinearLayout>

        <!--入住日期及状态-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_size_16"
            android:layout_marginTop="@dimen/font_size_5"
            android:layout_marginBottom="@dimen/font_size_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/H_order_adapter_enterTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:text="5月13 至 5月21日 1晚 / 1间"
               />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/font_size_10"
            android:visibility="gone"
            >

            <RelativeLayout
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="14dp"
                android:layout_marginRight="14dp"
                android:background="@drawable/gv_item_drawable"
                android:id="@+id/H_order_adapter_cancelOrder">
                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="取消"
                    android:textColor="@color/flight_blue_txt_color"
                    />
                </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
