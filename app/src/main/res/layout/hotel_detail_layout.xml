<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/all_background"
    android:orientation="vertical"
    >
    <ScrollView
        android:id="@+id/detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
     <LinearLayout
         android:id="@+id/hotel_viewpager_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:background="@color/light_gray"
         android:orientation="vertical"
        />
        <RelativeLayout
            android:id="@+id/app_back_rety"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:alpha="0.6"
            android:background="@drawable/hotel_shape_yuan"
            android:layout_margin="@dimen/font_size_10"
            >
            <ImageView
                android:layout_width="38dp"
                android:layout_height="20dp"
                android:src="@mipmap/app_back"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/imageView10"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:background="@color/gray_color"
            android:alpha="0.8"
            >
            <TextView
                android:id="@+id/hotel_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:textSize="@dimen/font_size_14"
                android:layout_marginLeft="@dimen/font_size_10"
                android:text="全季酒店(上海市天水南路店) 舒适型"
                />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/linearlayout_pointers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom|right"
            android:layout_margin="@dimen/font_size_10"

            >
        <TextView
            android:id="@+id/hnow_img_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/white"
            />
        <TextView
            android:id="@+id/hall_img_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textStyle="bold"
            android:textSize="@dimen/font_size_16"
            android:textColor="@color/white"
            />
        </LinearLayout>
    </FrameLayout><!--头部内荣-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    >
                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/font_size_10"

                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="优"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:textSize="@dimen/font_size_18"
                            android:textColor="@color/chengse"
                            />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="@dimen/line_height"
                        android:layout_height="match_parent"
                        android:background="@color/light_gray"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/font_size_10"
                        android:layout_marginStart="@dimen/font_size_10"
                        android:maxLines="2"
                        android:textColor="@color/flight_blue_txt_color"
                        android:id="@+id/hotel_pingfen_txt" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/light_gray"
                    android:layout_marginLeft="@dimen/font_size_10"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="vertical"
                    android:layout_marginRight="@dimen/font_size_10"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/font_size_10"
                        android:layout_marginStart="@dimen/font_size_10"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:id="@+id/hotel_kaiye_txt" />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/light_gray"
                    android:layout_marginLeft="@dimen/font_size_10"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:text="虹口区四平路59号(近海伦路,距地铁站-海伦路步行4分钟) "
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:layout_marginLeft="@dimen/font_size_10"
                        android:textColor="@color/black"
                        android:id="@+id/hotel_address_txt" />

                    <RelativeLayout
                        android:id="@+id/h_map_location"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="4"
                        >

                        <TextView
                            android:text="导航"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/flight_blue_txt_color"
                            android:id="@+id/textView9"
                            android:textSize="@dimen/font_size_16"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/h_right_img"
                            android:layout_marginRight="5dp"
                           />

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@mipmap/arrow_right"
                            android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/font_size_10"
                            android:id="@+id/h_right_img" />
                    </RelativeLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/light_gray"
                    android:layout_marginLeft="@dimen/font_size_10"
                    />


            </LinearLayout>
            <!--住店、离店日期-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/font_size_10"
                android:background="@color/white"
                >
                <!--住店日期-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="入住"
                        android:layout_marginLeft="@dimen/font_size_20"
                        />
                    <TextView
                        android:id="@+id/h_arr_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1月23日"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_18"
                        android:layout_marginLeft="@dimen/font_size_10"
                        />

                </LinearLayout>
                <TextView
                    android:layout_width="@dimen/line_height"
                    android:layout_height="match_parent"
                    android:background="@color/light_gray"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="离店"
                        android:layout_marginLeft="@dimen/font_size_20"
                        />
                    <TextView
                        android:id="@+id/h_out_date"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1月24日"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_18"
                        android:layout_marginLeft="@dimen/font_size_10"
                        />
                </LinearLayout>
            </LinearLayout>

            <com.myviews.MyListView
                android:id="@+id/hotel_son_listview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/font_size_10"
                android:scrollbars="none"
                android:divider="@color/transparent"
                android:dividerHeight="5dp"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
