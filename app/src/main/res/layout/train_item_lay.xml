<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@drawable/train_shape_right"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            >
            <!--出发站和时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/train_dept_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/font_size_20"
                    android:text="北京南"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/train_dept_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/font_size_18"
                    android:layout_marginTop="@dimen/font_size_10"
                    android:textStyle="bold"
                    android:text="06:30"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>
            <!--时间和班次-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/train_number_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/gray_color"
                    android:layout_marginTop="@dimen/font_size_20"
                    android:text="G101"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    />
                <ImageView
                    android:id="@+id/ddd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/train_dept_arr"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/train_running_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_14"
                    android:textColor="@color/gray_color"
                    android:layout_marginTop="5dp"
                    android:text="5小时20分"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>
            <!--到达站和时间-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/train_arr_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/font_size_20"
                    android:text="上海南"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/train_arr_time_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_size_18"
                    android:layout_marginTop="@dimen/font_size_10"
                    android:text="06:30"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>
            <!--票价-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/train_price_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_18"
                    android:textColor="@color/chengse"
                    android:layout_marginTop="@dimen/font_size_20"
                    android:text="￥450"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    />

            </LinearLayout>



        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            />
          <!--座位型号显示-->

          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              >
              <TextView
                  android:id="@+id/train_second_seat_txt"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="二等座:333张"
                  android:gravity="center"
                  android:textSize="@dimen/font_size_12"
                  />
              <TextView
                  android:id="@+id/train_first_seat_txt"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="一等座:333张"
                  android:gravity="center"
                  android:textSize="@dimen/font_size_12"

                  />
              <TextView
                  android:id="@+id/train_shop_seat_txt"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:text="商务座:333张"
                  android:gravity="center"
                  android:textSize="@dimen/font_size_12"
                  />
              <TextView
                  android:id="@+id/train__qita_txt"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:gravity="center"
                  android:textSize="@dimen/font_size_12"
                  />

          </LinearLayout>
    </LinearLayout>

</LinearLayout>
