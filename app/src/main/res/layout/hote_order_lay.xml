<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/all_background"
    >
   <include
       android:id="@+id/title_bar1"
       layout="@layout/app_title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:layout_marginBottom="52dp"
        android:layout_below="@+id/title_bar1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/gg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/font_size_10"
                    android:background="@drawable/shape_rectangle_white"
                    android:orientation="vertical"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/font_size_10"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="@dimen/font_size_10"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >
                     <TextView
                        android:id="@+id/order_room_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_16"
                        android:text="无窗房"
                        android:textColor="@color/black"
                         />
                            <TextView
                                android:id="@+id/order_room_isfood"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/black"
                                android:text="(单早)"
                                />
                         <TextView
                             android:id="@+id/order_room_payment"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:text="现付"
                             android:textColor="@color/chengse"
                             android:layout_marginLeft="@dimen/font_size_10"
                             android:textSize="@dimen/font_size_16"
                             android:textStyle="bold"
                             />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/order_room_date_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_16"
                            android:layout_marginTop="5dp"
                            android:text="入住：2月14日 离店：2月15日  1晚"
                            />
                        <TextView
                            android:id="@+id/order_room_content_isfood"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:text="大床/双床 2-13楼,20平米,免费宽带,可住两人   无早"
                            android:layout_marginRight="@dimen/font_size_10"
                            />

                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
           <!--变更规则和担保规则-->
            <RelativeLayout
                android:id="@+id/order_room_need_rety"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@color/white"
                >
                <TextView
                    android:text="收起预订须知"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/colorPrimary"
                    android:id="@+id/order_must_know"/>
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/room_shouqi"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="@dimen/font_size_16"
                    android:id="@+id/order_room_need_img"/>
            </RelativeLayout>
           <include
               android:id="@+id/order_rule_lay"
               android:visibility="visible"
               layout="@layout/order_rules_layout"/>
           <!--房间数量，入住人，到点时间选择-->
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:background="@color/white"
                 android:layout_marginTop="@dimen/font_size_10"
                 >
                 <RelativeLayout
                     android:id="@+id/order_room_num_rety"
                     android:layout_width="match_parent"
                     android:layout_height="45dp">

                     <TextView
                         android:text="房间数"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="16dp"
                         android:layout_marginStart="16dp"
                         android:id="@+id/textView12"/>

                     <TextView
                         android:text="1间"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                         android:textSize="@dimen/font_size_18"
                         android:textColor="@color/black"
                         android:id="@+id/order_room_num_txt"/>

                     <ImageView
                         android:layout_width="30dp"
                         android:layout_height="30dp"
                         android:background="@mipmap/room_fangxia"
                         android:layout_centerVertical="true"
                         android:layout_alignParentRight="true"
                         android:layout_alignParentEnd="true"
                         android:layout_marginRight="@dimen/font_size_16"
                         android:id="@+id/order_room_num_img"/>
                 </RelativeLayout>
                 <!--分割线-->
                 <TextView
                     android:id="@+id/g_line1"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/line_height"
                     android:background="@color/light_gray"
                     />
                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:orientation="vertical"
                     android:background="@color/light_gray"
                     >
                   <com.myviews.MyGridView
                       android:id="@+id/order_room_gridview"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:numColumns="5"
                       android:visibility="gone"
                       android:horizontalSpacing="@dimen/font_size_10"
                       android:verticalSpacing="@dimen/font_size_10"
                       android:layout_marginLeft="@dimen/font_size_10"
                       android:layout_marginRight="@dimen/font_size_10"
                       android:scrollbars="none"
                       />
                 </LinearLayout>

                  <!--最晚到店时间-->

                 <RelativeLayout
                     android:id="@+id/order_room_arrive_rety"
                     android:layout_width="match_parent"
                     android:layout_height="45dp">

                     <TextView
                         android:text="到店时间"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:layout_marginLeft="16dp"
                         android:layout_marginStart="16dp"
                         android:id="@+id/tt1"/>

                     <TextView
                         android:text="14:00"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:layout_centerHorizontal="true"
                         android:textSize="@dimen/font_size_18"
                         android:textColor="@color/black"
                         android:id="@+id/order_room_arrivetime_txt"/>

                     <ImageView
                         android:layout_width="16dp"
                         android:layout_height="20dp"
                         android:src="@mipmap/arrow_right"
                         android:layout_centerVertical="true"
                         android:layout_alignParentRight="true"
                         android:layout_alignParentEnd="true"
                         android:layout_marginRight="@dimen/font_size_18"
                         android:id="@+id/order_room_arrive_img"/>
                 </RelativeLayout>
                 <!--分割线-->
                 <TextView
                     android:id="@+id/g_line4"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/line_height"
                     android:background="@color/light_gray"
                     />

                 <com.myviews.MyListView
                     android:id="@+id/order_room_listview"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:scrollbars="none"
                     android:divider="@color/light_gray"
                     android:dividerHeight="@dimen/line_height"
                     />
                 <TextView
                     android:id="@+id/g_line2"
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/line_height"
                     android:background="@color/light_gray"
                     />
                 <RelativeLayout
                     android:id="@+id/order_room_addperson"
                     android:layout_width="match_parent"
                     android:layout_height="45dp"
                     android:background="@color/white"
                     >
                     <RelativeLayout
                         android:layout_width="match_parent"
                         android:layout_height="match_parent"
                         android:gravity="center"
                         >
                     <TextView
                         android:text="添加入住人"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_centerVertical="true"
                         android:layout_centerHorizontal="true"
                         android:textColor="@color/colorPrimary"
                         android:textSize="@dimen/font_size_16"
                         android:id="@+id/textView4" />

                     <ImageView
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:background="@mipmap/add_person"
                         android:layout_centerVertical="true"
                         android:layout_toLeftOf="@+id/textView4"
                         android:layout_toStartOf="@+id/textView4"
                         android:id="@+id/imageView4" />
                     </RelativeLayout>
                 </RelativeLayout>
             </LinearLayout>
            <!--联系人，项目名称+编号-->
            <include layout="@layout/user_project_lay"/>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/rr"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height_45"
        android:gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/flight_gray_txt_color"
        >


        <TextView
            android:text="订单总额￥"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/font_size_16"
            android:id="@+id/textView7" />

        <TextView
            android:id="@+id/order_room_all_price"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/textView7"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_18"
            />

        <Button
            android:layout_width="95dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="下一步"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/font_size_10"
            android:background="@drawable/bt_bgd"
            android:id="@+id/order_room_btn" />

    </RelativeLayout>
</RelativeLayout>
