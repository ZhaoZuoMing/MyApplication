<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/segment_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginTop="@dimen/font_size_10"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               >
            <TextView
                android:id="@+id/DepTime_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/black"
                android:text="17:00"
                android:gravity="center"
                android:layout_weight="1"
                />
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   />

               <TextView
                   android:id="@+id/ArvTime_txt"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/font_size_18"
                   android:textColor="@color/black"
                   android:text="21:45"
                   android:layout_weight="1"
                />
               <TextView
                   android:id="@+id/lowestPrice_txt"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:textColor="@color/main_color_yellow"
                   android:textSize="@dimen/font_size_18"
                   android:text="￥3990"
                   android:layout_weight="1"
                   />
           </LinearLayout>
        <!--箭头-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_size_5"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
               <ImageView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_weight="1"
                   android:layout_marginRight="@dimen/font_size_10"
                   android:layout_gravity="center_vertical"
                   android:src="@mipmap/flight_item_img"
                   />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                />
            </LinearLayout>
         <!--出发到达航站楼-->
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             >
             <TextView
                 android:id="@+id/OrgCityName_txt"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:text="上海浦东(T1)"
                 android:maxLines="1"
                 android:ellipsize="end"
                 android:textColor="@color/gray_color"
                 android:gravity="center"
                 />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    />
             <TextView
                 android:id="@+id/DstCityName_txt"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:maxLines="1"
                 android:ellipsize="end"
                 android:text="北京首都(T1)"
                 android:textColor="@color/gray_color"
                 />

             <FrameLayout
                 android:id="@+id/select_flight_cabin"
                 android:layout_width="match_parent"
                 android:layout_height="fill_parent"
                 android:layout_gravity="center_vertical|right"
                 android:layout_weight="1"
               >
                 <ImageView
                     android:layout_width="15dp"
                     android:layout_height="15dp"
                     android:layout_gravity="right|center_vertical"
                     android:clickable="false"
                     android:contentDescription="@string/app_name"
                     android:focusable="false"
                     android:layout_marginRight="10dp"
                     android:src="@mipmap/arrow_right" />
             </FrameLayout>
         </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/font_size_10"
            >
            <ImageView
                android:id="@+id/airline_img_btn"
                android:layout_width="20dip"
                android:layout_height="20dip"
                android:layout_marginLeft="@dimen/font_size_20"
                android:background="@mipmap/flight_mu"
                android:layout_gravity="center_vertical"
                android:clickable="false"
                android:focusable="false" />

            <TextView
                android:id="@+id/AirLineName_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="东航"
                android:layout_marginLeft="@dimen/font_size_5"
                android:gravity="center_vertical"
                />
               <TextView
                   android:id="@+id/FlightNo_txt"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="MU5141"
                   android:textColor="@color/colorPrimary"
                   android:gravity="center_vertical"
                   />
            <TextView
                android:id="@+id/PlaneStyle_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="|空客320(中)"
                android:layout_marginLeft="@dimen/font_size_5"
                android:gravity="center_vertical"
                />

        </LinearLayout>


    </LinearLayout>
    <GridView
        android:id="@+id/cabin_grids_view"
        style="@style/grid_view_style"
        android:scrollbars="none"
        android:visibility="gone" />
</LinearLayout>
