<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/font_size_5"
    android:background="@color/listview_driver"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_size_28"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/contact_number"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/font_size_16"
            app:srcCompat="@mipmap/contact_number" />

        <TextView
            android:id="@+id/contact_number_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/font_size_10"
            android:text="联系手机"
            android:textColor="@color/gray_color" />

        <EditText
            android:id="@+id/contact_number_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="15201865442"
            android:textColor="@color/gray_color"
            android:textSize="@dimen/font_size_14"
            android:layout_marginLeft="@dimen/font_size_16"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_size_28"
        android:background="@color/white"
        android:layout_marginTop="@dimen/line_height_03"
        >

        <ImageView
            android:id="@+id/contact_emil"
            android:layout_width="30dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/font_size_14"
            app:srcCompat="@mipmap/contact_emil" />

        <TextView
            android:id="@+id/contact_emil_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/font_size_10"
            android:text="联系邮箱"
            android:textColor="@color/gray_color" />

        <EditText
            android:id="@+id/contact_emil_edt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="zhaodonyang@aliyun.com"
            android:textSize="@dimen/font_size_14"
            android:textColor="@color/gray_color"
            android:layout_marginLeft="@dimen/font_size_16"
            />
    </LinearLayout>

</LinearLayout>
