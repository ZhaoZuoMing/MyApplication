<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/all_background"
    android:orientation="vertical"
    >
    <include layout="@layout/app_title_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary"
        >
        <!--出发城市及时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/dt_dept_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_18"
                android:text="上海虹桥"
                android:layout_marginTop="@dimen/font_size_10"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/font_size_20"
                />
            <TextView
                android:id="@+id/dt_dept_time_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_20"
                android:text="06:25"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/font_size_10"
                android:layout_marginLeft="@dimen/font_size_20"
                />
            <TextView
                android:id="@+id/dt_startdate_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_20"
                android:text="2016-12-24"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/font_size_10"
                android:layout_marginLeft="@dimen/font_size_20"
                />

        </LinearLayout>
        <!--车次编号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
           <TextView
               android:id="@+id/dt_train_code_txt"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:textColor="@color/white"
               android:layout_marginTop="@dimen/font_size_20"
               android:textSize="@dimen/font_size_18"
               android:text="G20"
               android:gravity="center_horizontal"
               />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white"
                android:layout_margin="@dimen/font_size_10"
                />
              <TextView
                  android:id="@+id/dt_run_time_txt"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="25:00"
                  android:layout_marginTop="5dp"
                  android:gravity="center_horizontal"
                  android:textColor="@color/white"
                  android:textSize="@dimen/font_size_18"
                  />

        </LinearLayout>
        <!--到达城市及时间-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/dt_arr_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_18"
                android:text="上海虹桥"
                android:layout_marginTop="@dimen/font_size_10"
                android:textColor="@color/white"
                android:layout_marginRight="@dimen/font_size_20"
                android:gravity="right"
                />
            <TextView
                android:id="@+id/dt_arr_time_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_20"
                android:text="06:25"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/font_size_10"
                android:layout_marginRight="@dimen/font_size_20"
                android:gravity="right"

                />
            <TextView
                android:id="@+id/dt_arrdate_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_20"
                android:text="2016-12-24"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/font_size_10"
                android:layout_marginRight="@dimen/font_size_20"
                android:gravity="right"

                />

        </LinearLayout>
    </LinearLayout>
    <!--座位选择-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:background="@color/light_gray"
        android:layout_marginTop="@dimen/font_size_20"
        />
    <LinearLayout
        android:id="@+id/gd_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >

        <LinearLayout
            android:id="@+id/dt_edz_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height_45"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="二等座"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/black"
                />
              <TextView
                  android:id="@+id/dt_edz_price"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center"
                  android:textColor="@color/chengse"
                  android:text="￥420"
                  android:layout_weight="1"
                  android:textSize="@dimen/font_size_18"
                  />
            <TextView
                android:id="@+id/dt_edz_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="200张"
                android:textSize="@dimen/font_size_16"
                android:layout_weight="1"
                />
             <Button
                 android:id="@+id/btn_dtorder_edz"
                 android:layout_width="match_parent"
                 android:layout_height="40dp"
                 android:background="@color/chengse"
                 android:layout_marginRight="@dimen/font_size_10"
                 android:text="预定"
                 android:textColor="@color/white"
                 android:textSize="@dimen/font_size_18"
                 android:layout_weight="1"
                 />

        </LinearLayout>

        <!--一等座预定-->
        <TextView
            android:id="@+id/ydz_v1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/font_size_20"
            />
        <!--一等座布局-->
        <LinearLayout
            android:id="@+id/dt_ydz_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height_45"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dt01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="一等座"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/dt_ydz_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/chengse"
                android:text="￥420"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_18"
                />
            <TextView
                android:id="@+id/dt_ydz_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="200张"
                android:textSize="@dimen/font_size_16"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_dtorder_ydz"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/chengse"
                android:layout_marginRight="@dimen/font_size_10"
                android:text="预定"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18"
                android:layout_weight="1"
                />

        </LinearLayout>


        <TextView
            android:id="@+id/swz_v3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/font_size_20"
            />
        <LinearLayout
            android:id="@+id/dt_swz_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height_45"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dt02"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="商务座"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/dt_swz_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/chengse"
                android:text="￥420"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_18"
                />
            <TextView
                android:id="@+id/dt_swz_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="200张"
                android:textSize="@dimen/font_size_16"
                android:layout_weight="1"
                />
            <Button
                android:id="@+id/btn_dtorder_swz"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/chengse"
                android:layout_marginRight="@dimen/font_size_10"
                android:text="预定"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18"
                android:layout_weight="1"
                />

        </LinearLayout>
        <TextView
            android:id="@+id/rw_01"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/font_size_20"
            />
        <!--r软卧-->
        <LinearLayout
            android:id="@+id/dt_rw_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height_45"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dtrw2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="软卧"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/dt_rw_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/chengse"
                android:text="￥420"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_18"
                />
            <TextView
                android:id="@+id/dt_rw_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="200张"
                android:textSize="@dimen/font_size_16"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btn_dtorder_rw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/font_size_10"
                android:layout_weight="1"
                android:background="@color/chengse"
                android:text="预定"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

        </LinearLayout>

        <TextView
            android:id="@+id/gjrw_v"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/font_size_20"
            />
        <!--r软卧-->
        <LinearLayout
            android:id="@+id/dt_gjrw_lay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height_45"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/dtgjrw2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="高级软卧"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/dt_gjrw_price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/chengse"
                android:text="￥420"
                android:layout_weight="1"
                android:textSize="@dimen/font_size_18"
                />
            <TextView
                android:id="@+id/dt_gjrw_num"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/black"
                android:text="200张"
                android:textSize="@dimen/font_size_16"
                android:layout_weight="1"
                />

            <Button
                android:id="@+id/btn_dtorder_gjrw"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginRight="@dimen/font_size_10"
                android:layout_weight="1"
                android:background="@color/chengse"
                android:text="预定"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_18" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            />
    </LinearLayout>

    <!--快铁布局-->
    <include
        android:id="@+id/kt_lay"
        layout="@layout/kt_item_lay" />

</LinearLayout>
