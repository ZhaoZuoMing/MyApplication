<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/light_gray"
              android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical"
           android:layout_weight="1"
           >

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:orientation="horizontal"
                android:layout_weight="1"
               >
             <TextView
                 android:text="含双早(春节特惠售后保障啦啦啦)"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/black"
                 android:layout_marginLeft="@dimen/font_size_10"
                 android:id="@+id/room_price_title"/>

           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="horizontal"
               android:gravity="center_vertical"
               android:layout_weight="1.3"

               >

               <TextView
                   android:id="@+id/room_cancel_txt"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="限时取消"
                   android:textColor="@color/flight_blue_txt_color"
                   android:layout_marginLeft="@dimen/font_size_10"
                   />
               <TextView
                   android:text=""
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textColor="@color/flight_green_txt_color"
                   android:layout_marginLeft="@dimen/font_size_10"
                   android:id="@+id/room_price_isroute"/>
           </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center_vertical"
               android:layout_weight="1.2"
               android:orientation="horizontal"
               >
               <TextView
                   android:id="@+id/room_price_wifi"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="免费wifi"
                   android:layout_marginLeft="@dimen/font_size_10"
                   />
               <TextView
                   android:id="@+id/room_price_food"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="@dimen/font_size_10"
                   android:visibility="visible"
                   android:text=""
                   />
           </LinearLayout>

       </LinearLayout>
        <TextView
            android:layout_width="@dimen/line_height"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/light_gray"
            />

      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
          android:layout_weight="1.2"
          >

          <LinearLayout
              android:layout_width="60dp"
              android:layout_height="55dp"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:layout_alignParentEnd="true"
              android:orientation="vertical"
              android:layout_marginRight="@dimen/font_size_10"
              android:background="@drawable/hotel_yuding_shape"
              android:id="@+id/order_liner">
              <RelativeLayout
                  android:id="@+id/room_order_btn"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1"
                  android:background="@drawable/hotel_yuding_shape1"
                  >

                  <TextView
                      android:text="预订"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:textSize="@dimen/font_size_16"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:id="@+id/order_txt"/>
              </RelativeLayout>
              <RelativeLayout
                  android:id="@+id/name_lay"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_weight="1.5"
                  >
                  <TextView
                      android:text="到店付"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/roon_payment_txt"
                      android:layout_centerHorizontal="true"
                      android:textSize="@dimen/font_size_14"
                      android:textColor="@color/gray_color"
                      android:layout_centerVertical="true"
                      />

              </RelativeLayout>
          </LinearLayout>

          <TextView
              android:text="￥300"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="@dimen/font_size_16"
              android:textColor="@color/chengse"
              android:textStyle="bold"
              android:id="@+id/room_hotel_price"
              android:layout_marginLeft="@dimen/font_size_10"
              android:layout_alignTop="@+id/order_liner"
              android:layout_toLeftOf="@+id/order_liner"
              android:layout_alignParentLeft="true"
              android:layout_alignParentStart="true"/>
      </RelativeLayout>
    </LinearLayout>


</LinearLayout>
