<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="预定须知"
        android:textSize="@dimen/font_size_18"
        android:layout_marginLeft="@dimen/font_size_20"
        />
    <!--预订须知-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/shape_rectangle_white"
        android:layout_margin="@dimen/font_size_10"
        android:visibility="visible"
        >

        <!--单程航班预订须知-->
        <LinearLayout
            android:id="@+id/single_flight_msg_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="去程预订须知:"
                android:textColor="@color/colorPrimary"

                android:layout_marginTop="@dimen/font_size_10"
                android:textSize="@dimen/font_size_16"

                android:layout_marginLeft="@dimen/font_size_10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/gray_color"
                android:layout_marginLeft="@dimen/font_size_10"
                />
        <TextView
            android:id="@+id/single_flight_refund_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1.退票，航班起飞两俩小时前取消定坐，客票有效期内免费退票；航班起飞两小时内及以后"
            android:layout_marginTop="@dimen/font_size_10"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_marginRight="@dimen/font_size_10"
            />
        <TextView
            android:id="@+id/single_flight_change_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2.改签，航班起飞两俩小时前取消定坐，客票有效期内免费退票；航班起飞两小时内及以后"
            android:layout_marginTop="@dimen/font_size_10"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_marginRight="@dimen/font_size_10"
            />
        <TextView
            android:id="@+id/single_flight_ei_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3.签转，不得签转。"
            android:layout_marginTop="@dimen/font_size_10"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_marginRight="@dimen/font_size_10"
            />
        <!-- 公司政策说明-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/font_size_10"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red"
                android:text="*贵公司政策:"
                />
            <TextView
                android:id="@+id/single_flight_broke_role_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                />
        </LinearLayout>
        </LinearLayout>
        <!--返程航班预订须知-->


        <LinearLayout
            android:id="@+id/round_flight_msg_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:text="返程预订须知:"
                android:layout_marginTop="@dimen/font_size_10"
                android:textSize="@dimen/font_size_16"
                android:layout_marginLeft="@dimen/font_size_10"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/gray_color"
                android:layout_marginLeft="@dimen/font_size_10"

                />

            <TextView
                android:id="@+id/round_flight_refund_info_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.退票，航班起飞两俩小时前取消定坐，客票有效期内免费退票；航班起飞两小时内及以后"
                android:layout_marginTop="@dimen/font_size_10"
                android:layout_marginLeft="@dimen/font_size_10"
                android:layout_marginRight="@dimen/font_size_10"
                />
            <TextView
                android:id="@+id/round_flight_change_info_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2.改签，航班起飞两俩小时前取消定坐，客票有效期内免费退票；航班起飞两小时内及以后"
                android:layout_marginTop="@dimen/font_size_10"
                android:layout_marginLeft="@dimen/font_size_10"
                android:layout_marginRight="@dimen/font_size_10"
                />
            <TextView
                android:id="@+id/round_flight_ei_info_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3.签转，不得签转。"
                android:layout_marginTop="@dimen/font_size_10"
                android:layout_marginLeft="@dimen/font_size_10"
                android:layout_marginRight="@dimen/font_size_10"
                />
            <!-- 公司政策说明-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="@dimen/font_size_10"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="*贵公司政策:"
                    />
                <TextView
                    android:id="@+id/round_flight_broke_role_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!--违反政策填写的原因-->

    <LinearLayout
        android:id="@+id/cabin_is_rule_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="违反政策原因"
            android:textSize="@dimen/font_size_18"
            android:layout_marginLeft="@dimen/font_size_20"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/shape_rectangle_white"
            android:layout_margin="@dimen/font_size_10"
            >
            <!--去程违反政策原因-->
            <LinearLayout
                android:id="@+id/single_role_content_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="去程违反政策原因:"
                android:textColor="@color/blue"
                android:layout_marginLeft="@dimen/font_size_10"
                android:layout_marginTop="@dimen/font_size_10"
                />


                <EditText
                    android:id="@+id/single_flight_remark_txt"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/search_background"
                    android:hint="请输入违反政策原因"
                    android:gravity="left"
                    android:padding="8dp"
                    android:textSize="@dimen/font_size_16"
                    />
            </LinearLayout>
            <!--去程违反政策原因-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/gray_color"
                />
            <LinearLayout
                android:id="@+id/round_role_content_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="反程违反政策原因:"
                    android:textColor="@color/blue"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:layout_marginTop="@dimen/font_size_10"
                    />


                <EditText
                    android:id="@+id/round_flight_remark_txt"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/search_background"
                    android:hint="请输入违反政策原因"
                    android:gravity="left"
                    android:padding="8dp"
                    android:textSize="@dimen/font_size_16"
                    />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
