<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/cabin_price"
                style="@style/single_line_txt"
                android:text="￥1200"
                android:layout_marginLeft="@dimen/font_size_10"
                android:textColor="@color/flight_price_color"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/cabin_isRule_txt"
                style="@style/single_line_txt"
                android:layout_gravity="right"
                android:text="违"
                android:layout_marginTop="@dimen/font_size_10"
                android:textColor="@color/red"
                android:textSize="16sp" />
        </FrameLayout>

        <TextView
            android:id="@+id/cabin_desc"
            style="@style/single_line_txt"
            android:text="经济舱"
            android:layout_marginLeft="@dimen/font_size_10"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/cabin_count"
                style="@style/single_line_txt"
                android:text="充裕"
                android:layout_marginLeft="@dimen/font_size_10"
                android:textColor="@color/gray_color"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/cabin_aggrementCode_txt"
                style="@style/single_line_txt"
                android:layout_gravity="right"
                android:text="协议价"
                android:textColor="@color/flight_green_txt_color"
                android:textSize="14sp" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:id="@+id/right_line_view"
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_marginRight="5dip"
        android:background="@color/flight_line_blue_color" />


</LinearLayout>