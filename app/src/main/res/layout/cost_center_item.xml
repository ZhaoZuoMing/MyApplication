<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/font_size_16"
    android:background="@color/them_app_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_size_28"
            android:background="@color/white"
            android:text="@string/broke_rule_reason_txt"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/font_size_10"
            android:textColor="@color/gray_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_03"
            android:background="@color/them_app_bg"
            />
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="@dimen/font_size_28"
               android:layout_marginTop="@dimen/line_height_03"
               android:background="@color/white"
               >

               <ImageView
                   android:id="@+id/imageView17"
                   android:layout_width="@dimen/font_size_25"
                   android:layout_height="@dimen/font_size_25"
                  android:layout_centerVertical="true"
                   android:layout_marginLeft="@dimen/font_size_16"
                   android:layout_marginStart="@dimen/font_size_16"
                   app:srcCompat="@mipmap/item_down" />

               <TextView
                   android:id="@+id/textView27"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:textColor="@color/flight_gray_txt_color"
                   android:layout_marginLeft="@dimen/font_size_10"
                   android:layout_marginStart="@dimen/font_size_10"
                   android:layout_toEndOf="@+id/imageView17"
                   android:layout_toRightOf="@+id/imageView17"
                   android:textSize="@dimen/font_size_12"
                   android:text="请选择" />
           </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_03"
            android:background="@color/them_app_bg"
            android:layout_marginLeft="@dimen/font_size_10"
            />
           <!--自填超标原因-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_size_28"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="@dimen/font_size_12"
                android:layout_marginLeft="@dimen/font_size_16"
                android:layout_marginStart="@dimen/font_size_16"
                android:paddingLeft="@dimen/font_size_10"
                android:textColor="@color/flight_gray_txt_color"
                android:text="其他" />

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginLeft="@dimen/font_size_14"
                android:textSize="@dimen/font_size_12"
                android:background="@drawable/train_shape_right"
                android:inputType="textPersonName"
                android:textColor="@color/gray_color"
                android:gravity="center_vertical"
                android:text="没有最低航班，紧急出差！！" />
        </LinearLayout>
    </LinearLayout>
    <!--成本中心-->
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/white"
         android:orientation="vertical"
         android:layout_marginTop="@dimen/font_size_16"
         >
         <TextView
             android:layout_width="match_parent"
             android:layout_height="@dimen/font_size_28"
             android:background="@color/white"
             android:text="@string/select_cost_center_txt"
             android:gravity="center_vertical"
             android:paddingLeft="@dimen/font_size_10"
             android:textColor="@color/gray_color"
             />
         <TextView
             android:layout_width="match_parent"
             android:layout_height="@dimen/line_height_03"
             android:background="@color/them_app_bg"
             />
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/font_size_28"
             android:layout_marginTop="@dimen/line_height_03"
             android:background="@color/white"
             >

             <ImageView
                 android:id="@+id/chengben_img"
                 android:layout_width="@dimen/font_size_25"
                 android:layout_height="@dimen/font_size_25"
                 android:layout_centerVertical="true"
                 android:layout_marginLeft="@dimen/font_size_16"
                 android:layout_marginStart="@dimen/font_size_16"
                 app:srcCompat="@mipmap/item_down" />

             <TextView
                 android:id="@+id/chengben__txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:textColor="@color/flight_gray_txt_color"
                 android:layout_marginLeft="@dimen/font_size_10"
                 android:layout_marginStart="@dimen/font_size_10"
                 android:layout_toEndOf="@+id/chengben_img"
                 android:layout_toRightOf="@+id/chengben_img"
                 android:textSize="@dimen/font_size_12"
                 android:text="请选择" />
         </RelativeLayout>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="@dimen/line_height_03"
             android:background="@color/them_app_bg"
             android:layout_marginLeft="@dimen/font_size_10"
             />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="@dimen/font_size_28"
             android:background="@color/white"
             android:orientation="horizontal"
             >

             <CheckBox
                 android:id="@+id/chengben_checkBox"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:checked="true"
                 android:textSize="@dimen/font_size_12"
                 android:layout_marginLeft="@dimen/font_size_16"
                 android:layout_marginStart="@dimen/font_size_16"
                 android:paddingLeft="@dimen/font_size_10"
                 android:textColor="@color/flight_gray_txt_color"
                 android:text="其他" />

             <EditText
                 android:id="@+id/chengben_name_editText"
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:ems="10"
                 android:layout_marginLeft="@dimen/font_size_14"
                 android:textSize="@dimen/font_size_12"
                 android:background="@drawable/train_shape_right"
                 android:inputType="textPersonName"
                 android:textColor="@color/gray_color"
                 android:gravity="center_vertical"
                 android:hint="请输入成本中心名称"
                />
         </LinearLayout>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="@dimen/line_height_03"
             android:background="@color/them_app_bg"
             android:layout_marginLeft="@dimen/font_size_10"
             />
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/font_size_28">

              <EditText
                  android:id="@+id/editText2"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentEnd="true"
                  android:layout_alignParentRight="true"
                  android:layout_centerVertical="true"
                  android:ems="10"
                  android:layout_marginLeft="100dp"
                  android:background="@color/white"
                  android:textSize="@dimen/font_size_12"
                  android:inputType="textPersonName"
                  android:hint="请输入成本中心代码"
                  android:textColor="@color/gray_color"
                   />
          </RelativeLayout>
     </LinearLayout>
    <!--部门选择-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/font_size_16"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_size_28"
            android:background="@color/white"
            android:text="所在部门"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/font_size_10"
            android:textColor="@color/gray_color"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_03"
            android:background="@color/them_app_bg"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_size_28"
            android:layout_marginTop="@dimen/line_height_03"
            android:background="@color/white"
            >

            <ImageView
                android:id="@+id/department_img"
                android:layout_width="@dimen/font_size_25"
                android:layout_height="@dimen/font_size_25"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/font_size_16"
                android:layout_marginStart="@dimen/font_size_16"
                app:srcCompat="@mipmap/item_down" />

            <TextView
                android:id="@+id/department__txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/flight_gray_txt_color"
                android:layout_marginLeft="@dimen/font_size_10"
                android:layout_marginStart="@dimen/font_size_10"
                android:layout_toEndOf="@+id/department_img"
                android:layout_toRightOf="@+id/department_img"
                android:textSize="@dimen/font_size_12"
                android:text="请选择" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_03"
            android:background="@color/them_app_bg"
            android:layout_marginLeft="@dimen/font_size_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_size_28"
            android:background="@color/white"
            android:orientation="horizontal"
            >

            <CheckBox
                android:id="@+id/department_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:textSize="@dimen/font_size_12"
                android:layout_marginLeft="@dimen/font_size_16"
                android:layout_marginStart="@dimen/font_size_16"
                android:paddingLeft="@dimen/font_size_10"
                android:textColor="@color/flight_gray_txt_color"
                android:text="其他" />

            <EditText
                android:id="@+id/department_name_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginLeft="@dimen/font_size_14"
                android:textSize="@dimen/font_size_12"
                android:background="@drawable/train_shape_right"
                android:inputType="textPersonName"
                android:textColor="@color/gray_color"
                android:gravity="center_vertical"
                android:hint="输入其他部门"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_03"
            android:background="@color/them_app_bg"
            android:layout_marginLeft="@dimen/font_size_10"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/font_size_28">

            <EditText
                android:id="@+id/department_number_editText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:ems="10"
                android:layout_marginLeft="100dp"
                android:background="@color/white"
                android:textSize="@dimen/font_size_12"
                android:inputType="textPersonName"
                android:hint="OA编号"
                android:textColor="@color/gray_color"
                />
        </RelativeLayout>
    </LinearLayout>
    <!--支付方式-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_item_instans"
        android:background="@color/white"
        android:layout_marginTop="@dimen/font_size_16"
        >

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/font_size_16"
            android:checked="true"
            android:layout_gravity="center_vertical"
            android:textColor="@color/gray_color"
            android:text="因公" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_marginRight="@dimen/font_size_10"
            android:background="@drawable/hotel_yuding_shape"
            >
            <RadioButton
                android:id="@+id/radioButton_1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/font_size_16"
                android:checked="true"
                android:textColor="@color/gray_color"
                android:text="@string/pay_company_txt" />
            <RadioButton
                android:id="@+id/radioButton_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/font_size_16"
                android:layout_weight="1"
                android:textColor="@color/gray_color"
                android:text="@string/pay_user_txt" />

        </RadioGroup>
    </LinearLayout>

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_bar_height_45"
        android:gravity="center"
        android:textSize="@dimen/font_size_12"
        android:text="---------------------到底了---------------------" />

</LinearLayout>
