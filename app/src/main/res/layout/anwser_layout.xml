<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:id="@+id/answer_time_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2017-02-27 11:22:18"
        android:textSize="13dp"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/font_size_10"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="38dp"
            android:background="@drawable/huifu_drawable"
            android:id="@+id/kefu_icon_img"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_alignParentStart="true" >
            <TextView
                android:text="回复"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/gray_color"
                android:id="@+id/textView18" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/hotel_yuding_shape"
            android:layout_margin="@dimen/font_size_10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/kefu_icon_img"
            android:id="@+id/kefu_answer_rety" >

            <TextView
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/font_size_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:id="@+id/answer_content_txt" />
        </RelativeLayout>


    </RelativeLayout>

</LinearLayout>
