<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/them_app_bg"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_margin="@dimen/font_size_10"
        android:background="@drawable/train_shape_right"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/from_flight_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                app:srcCompat="@mipmap/from_flight_icon"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/font_size_14"
                />

            <TextView
                android:id="@+id/from_Order_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/font_size_10"
                android:text="11月28日 星期二 上海-北京"
                android:textColor="@color/gray_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/from_Order_flight_change"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|right"
                android:layout_marginRight="@dimen/font_size_10"
                android:textColor="@color/blue"
                android:textSize="@dimen/font_size_12"
                android:text="查看退改签规则 >" />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height_03"
            android:background="@color/listview_driver"
            />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/flight_item_img" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView15"
                    android:layout_toStartOf="@+id/imageView15"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/from_flight_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_size_5"
                        android:text="16:45"
                        android:textAlignment="center"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/from_flight_airport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="虹桥(T2)"
                        android:textSize="@dimen/font_size_14"
                        android:textAlignment="center"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/imageView15"
                    android:layout_toRightOf="@+id/imageView15"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/from_end_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="19:30"
                        android:layout_marginTop="@dimen/font_size_5"
                        android:textAlignment="center"
                        android:textSize="@dimen/font_size_16"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/from_end_airport"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="首都(T1)"
                        android:textSize="@dimen/font_size_14"
                        android:textAlignment="center"
                        android:textColor="@color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true">

                    <ImageView
                        android:id="@+id/from_flightline_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="@dimen/font_size_28"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@mipmap/flight_cz" />

                    <TextView
                        android:id="@+id/from_flight_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/font_size_5"
                        android:gravity="center_vertical"
                        android:text="东方航空 | MU1757 | 773 | 经济舱"
                        android:textColor="@color/gray_color"
                        android:textSize="12sp" />
                </LinearLayout>

            </RelativeLayout>
    </LinearLayout>

</LinearLayout>
