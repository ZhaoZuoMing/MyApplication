<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/all_background"
    >
    <include layout="@layout/app_title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/hotel_test_img"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:layout_marginStart="@dimen/font_size_10"
                    android:src="@mipmap/hotel_test" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/font_size_5"
                    android:layout_toEndOf="@+id/hotel_test_img"
                    android:layout_toRightOf="@+id/hotel_test_img"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/order_hotel_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/font_size_10"
                        android:text="上海中福大酒店"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="入住日期："
                             />

                        <TextView
                            android:id="@+id/order_hotel_checkin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_color"
                            android:textSize="@dimen/font_size_16"
                            android:textStyle="italic"
                            android:text="2017-04-12" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="离店日期："
                          />

                        <TextView
                            android:id="@+id/order_hotel_checkout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/gray_color"
                            android:textSize="@dimen/font_size_16"
                            android:textStyle="italic"
                            android:text="2017-04-28" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="订单总价："
                           />

                        <TextView
                            android:id="@+id/order_hotel_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CNY328"
                            android:textColor="@color/chengse"
                            android:textSize="@dimen/font_size_16"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="25dp"
                 android:gravity="center_vertical"
                 >
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:textColor="@color/colorPrimary"
                     android:text="酒店其他信息"
                     android:textSize="@dimen/font_size_16"
                     android:layout_marginLeft="@dimen/font_size_10"
                     />

             </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">
<!--酒店地址-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="地址："
                        />
                    <TextView
                        android:id="@+id/order_hotel_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/gray_color"
                        android:layout_marginRight="@dimen/font_size_5"
                        android:text="浦东新区拯安路67-8"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/light_gray"
                    android:layout_marginLeft="@dimen/font_size_10"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
               <TextView
                   android:layout_width="110dp"
                   android:layout_height="wrap_content"
                   android:text="房型："
                   />
                    <TextView
                        android:id="@+id/order_hotel_roomtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_color"
                        android:text="商务大床房\t含单早\t免费宽带"
                        />
                </LinearLayout>
                 <TextView
                     android:layout_width="match_parent"
                     android:layout_height="@dimen/line_height"
                     android:background="@color/light_gray"
                     android:layout_marginLeft="@dimen/font_size_10"
                     />
            <!--支付方式-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="支付方式："
                        />
                    <TextView
                        android:id="@+id/order_hotel_paytype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_color"
                        android:text="前台现付"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/light_gray"
                    android:layout_marginLeft="@dimen/font_size_10"
                    />
                <!--最晚底店-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="最晚抵店："
                        />
                    <TextView
                        android:id="@+id/order_hotel_lasttime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_color"
                        android:text="2017-04-20 17:00(周六)"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/line001"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/light_gray"
                    android:layout_marginLeft="@dimen/font_size_10"
                    />
                <!--特殊需求-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"
                        android:text="特殊需求："
                        />
                    <TextView
                        android:id="@+id/order_hotel_needbad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="无"
                        android:textColor="@color/gray_color"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/light_gray"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:text="入住人信息"
                    android:textSize="@dimen/font_size_16"
                    android:layout_marginLeft="@dimen/font_size_16"
                    />

            </LinearLayout>
            <!--入住人信息-->
            <com.myviews.MyListView
                android:id="@+id/order_hotel_persons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:divider="@color/light_gray"
                android:dividerHeight="@dimen/line_height"
                android:visibility="visible"
                />

             <include layout="@layout/user_project_lay"/>

             <Button
                 android:id="@+id/test_pay_btn"
                 android:layout_width="match_parent"
                 android:layout_height="45dp"
                 android:text="去支付"
                 android:onClick="payBtn"
                 android:textColor="@color/white"
                 android:layout_margin="@dimen/font_size_20"
                 android:background="@drawable/gv_shape_selsected"
                 />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
