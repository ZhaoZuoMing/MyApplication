<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/font_size_16"
    android:background="@color/them_app_bg"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/font_size_28"
        android:background="@color/white"
        >
        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:text="乘机人"
            android:textColor="@color/gray_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView34"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/textView33"
            android:layout_toRightOf="@+id/textView33"
            android:text="仅支持成人票预订"
            android:textSize="12sp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/user_item_instans"
        android:background="@color/white"
        android:layout_marginTop="@dimen/line_height_03"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/person_IDNumber_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/font_size_25"
            android:layout_weight="1"
            android:text="张三"
            android:textColor="@color/gray_color" />
        <TextView
            android:id="@+id/person_IDNumber_Id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="身份证 620422198811121116"
            android:gravity="center_vertical"
            android:textSize="@dimen/font_size_12"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/font_size_25"
            />
    </LinearLayout>

</LinearLayout>
