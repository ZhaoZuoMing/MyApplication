<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="机票信息"
        android:textSize="@dimen/font_size_18"
        android:layout_marginLeft="@dimen/font_size_20"
        android:layout_marginTop="@dimen/font_size_10"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/font_size_10"
        android:background="@drawable/shape_rectangle_white"
        android:orientation="vertical"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="@dimen/title_bar_height_45"
           android:orientation="horizontal"
           android:layout_marginTop="@dimen/font_size_10"
           >
           <Button
               android:layout_width="60dp"
               android:layout_height="40dp"
               android:text="去程:"
               android:textColor="@color/blue"
               android:layout_gravity="center_vertical"
               android:textSize="@dimen/font_size_14"
               android:layout_marginLeft="@dimen/font_size_10"
               />
           <ImageView
               android:layout_width="40dp"
               android:layout_height="40dp"
               android:layout_marginLeft="@dimen/font_size_20"
               android:layout_gravity="center_vertical"
               android:id="@+id/single_flight_airline_img"
                />
             <TextView
                 android:id="@+id/single_flight_airline_no_txt"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="center_vertical"
                 android:text="东方航空 MU4531"
                 android:textSize="@dimen/font_size_18"
                 android:textColor="@color/colorPrimary"
                 android:layout_marginLeft="@dimen/font_size_16"
                 />



       </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_marginRight="@dimen/font_size_10"
            />

        <!--起降机场及航站楼-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/title_bar_height_45"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/single_line_sta_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_size_18"
                android:layout_marginLeft="@dimen/font_size_10"
                android:text="起降机场："
                />
            <TextView
                android:id="@+id/single_flight_dept_arr_city_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text=""
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_marginRight="@dimen/font_size_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/single_line_title_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/font_size_18"
                android:layout_marginLeft="@dimen/font_size_10"
                android:text="起降时间："
                />
            <TextView
                android:id="@+id/single_flight_info_date_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="2016-11-30"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/single_flight_dept_arr_time_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="18:00 - 24:30"
                android:textSize="@dimen/font_size_18"
                android:textColor="@color/black"
                android:layout_marginLeft="@dimen/font_size_16"
                />

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_marginRight="@dimen/font_size_10"
            />


         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="40dp"
             android:orientation="horizontal"
             >
             <!--价格-->
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="horizontal"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/colorPrimary"
                     android:layout_gravity="center_vertical"
                     android:textSize="@dimen/font_size_18"
                     android:layout_marginLeft="@dimen/font_size_10"
                     android:text="价格："
                     />
                 <TextView
                     android:id="@+id/single_flight_price_txt"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:text="￥1200"
                     android:textSize="@dimen/font_size_18"
                     android:textColor="@color/chengse"

                     />

             </LinearLayout>
             <!--舱位-->
             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 android:orientation="horizontal"
                 >
                 <TextView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:textColor="@color/colorPrimary"
                     android:layout_gravity="center_vertical"
                     android:textSize="@dimen/font_size_18"
                     android:layout_marginLeft="@dimen/font_size_10"
                     android:text="舱位："
                     />
                 <TextView
                     android:id="@+id/single_flight_discount_txt"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center_vertical"
                     android:text="经济舱"
                     android:textSize="@dimen/font_size_18"
                     android:textColor="@color/chengse"

                     />
             </LinearLayout>

         </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:background="@color/light_gray"
            android:layout_marginLeft="@dimen/font_size_10"
            android:layout_marginRight="@dimen/font_size_10"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_marginBottom="5dp"
            >
            <!--燃油-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/font_size_18"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:text="燃油："
                    />
                <TextView
                    android:id="@+id/single_flight_fuel_tax_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="0"
                    android:textSize="@dimen/font_size_18"
                    android:textColor="@color/chengse"

                    />

            </LinearLayout>
            <!--机建-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimary"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/font_size_18"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:text="机建："
                    />
                <TextView
                    android:id="@+id/single_flight_airport_tax_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="￥50"
                    android:textSize="@dimen/font_size_18"
                    android:textColor="@color/chengse"

                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

     <!-- 返程机票信息-->
     <include
         android:id="@+id/round_flight_layout"
         android:visibility="gone"
         layout="@layout/backtickets_detail_layout"/>

    <!--去程预订须知-->
    <include layout="@layout/single_line_konw_layout"/>



</LinearLayout>
