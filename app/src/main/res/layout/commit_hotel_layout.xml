<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/all_background"
    android:orientation="vertical"
    >
   <include layout="@layout/app_title_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@mipmap/travel_title_bg"
                >
                <TextView
                    android:text="酒店信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textSize="@dimen/font_size_16"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_color"
                    android:layout_marginStart="16dp"
                    android:id="@+id/textView16" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/font_size_5"
                android:layout_marginLeft="@dimen/font_size_5"
                android:background="@drawable/shape_btn"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/commit_hotel_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_16"
                    android:layout_marginTop="@dimen/font_size_5"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:textColor="@color/flight_blue_txt_color"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/commit_hotel_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="@dimen/font_size_5"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:textColor="@color/gray_color"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/commit_hotel_enterdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="@dimen/font_size_5"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:textColor="@color/gray_color"
                    android:text=""
                    />
                <TextView
                    android:id="@+id/commit_hotel_arrivedate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="@dimen/font_size_5"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:textColor="@color/gray_color"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:id="@+id/commit_hotel_paytype_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_14"
                        android:layout_marginTop="@dimen/font_size_5"
                        android:layout_marginLeft="@dimen/font_size_10"
                        android:textColor="@color/gray_color"
                        android:text="支付方式："
                        />
                    <TextView
                        android:id="@+id/commit_hotel_paytype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_16"
                        android:layout_marginTop="@dimen/font_size_5"
                        android:layout_marginLeft="@dimen/font_size_10"
                        android:textColor="@color/chengse"
                        android:textStyle="bold"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="@dimen/font_size_10"
                    >
                <TextView
                    android:id="@+id/commit_hotel_allprice_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_14"
                    android:layout_marginTop="@dimen/font_size_5"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:textColor="@color/gray_color"
                    android:text="订单总价："
                    />
                    <TextView
                        android:id="@+id/commit_hotel_allprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_18"
                        android:textStyle="bold"
                        android:layout_marginTop="@dimen/font_size_5"
                        android:layout_marginLeft="@dimen/font_size_10"
                        android:textColor="@color/red"
                        />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@mipmap/commit_bar"
                android:layout_marginTop="@dimen/font_size_10"
                >
                <TextView
                    android:text="入住人信息请确认"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:textSize="@dimen/font_size_16"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginStart="16dp"
                    android:id="@+id/textView11" />
            </RelativeLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:background="@color/white"
                   android:orientation="horizontal"
                   >
                   <RelativeLayout
                       android:id="@+id/rr1"
                       android:layout_width="match_parent"
                       android:layout_height="match_parent"
                       android:layout_weight="3"
                       >
                       <TextView
                           android:text="入住人"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_centerHorizontal="true"
                           android:layout_centerVertical="true"
                           android:textSize="@dimen/font_size_16"
                           android:id="@+id/textView17" />
                   </RelativeLayout>

                   <TextView
                       android:id="@+id/line"
                       android:layout_width="@dimen/line_height"
                       android:layout_height="match_parent"
                       android:background="@color/light_gray"
                       android:layout_toRightOf="@+id/rr1"
                       android:layout_margin="@dimen/font_size_5"
                       />

                   <com.myviews.MyListView
                       android:id="@+id/user_name_listview"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:divider="@color/light_gray"
                       android:dividerHeight="@dimen/line_height"
                       android:layout_toRightOf="@+id/line"
                       android:visibility="visible"
                       android:layout_weight="1"
                       />

               </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/light_gray"
                />
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/title_bar_height_45"
                   android:background="@color/white"
                   android:orientation="horizontal"
                   >

                   <TextView
                       android:id="@+id/order_person_n"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="联系人:"
                       android:textColor="@color/gray_color"
                       android:gravity="center_vertical"
                       android:layout_marginLeft="@dimen/font_size_20"
                       />
                   <TextView
                       android:id="@+id/order_person_cname"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="赵东阳"
                       android:gravity="center_vertical"
                       android:layout_marginLeft="@dimen/font_size_10"
                       />
                   <TextView
                       android:id="@+id/order_person_p"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:text="手机:"
                       android:textColor="@color/gray_color"
                       android:gravity="center_vertical"
                       android:layout_marginLeft="@dimen/title_bar_height_45"
                       />
                   <TextView
                       android:id="@+id/order_person_phone"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:gravity="center_vertical"
                       android:layout_marginLeft="@dimen/font_size_10"
                       android:text="15201865331"
                       />

               </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@mipmap/commit_bar"
                android:layout_marginTop="@dimen/font_size_10"
                >
            <TextView
                android:text="成本中心"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp"
                android:textStyle="bold"
                android:textSize="@dimen/font_size_16"
                android:textColor="@color/white"
                android:layout_marginStart="16dp"
                android:id="@+id/textView21" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height_45"
                android:background="@color/white"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/order_chenben_n"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="成本中心:"
                    android:textColor="@color/gray_color"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/font_size_20"
                    />
                <TextView
                    android:id="@+id/order_chenben_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1100111414"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/font_size_10"
                    />
                <TextView
                    android:id="@+id/order_project_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="项目名/编号:"
                    android:textColor="@color/gray_color"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/font_size_20"
                    />
                <TextView
                    android:id="@+id/order_project_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text=""
                    />

            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@mipmap/commit_bar"
                android:layout_marginTop="@dimen/font_size_10"
                >
                <TextView
                    android:text="预订规则"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="16dp"
                    android:textStyle="bold"
                    android:textSize="@dimen/font_size_16"
                    android:textColor="@color/white"
                    android:layout_marginStart="16dp"
                    android:id="@+id/textView1" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/order_hotel_changerule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_color"
                    android:layout_marginTop="@dimen/font_size_10"
                    android:layout_marginLeft="@dimen/font_size_10"
                    android:layout_marginRight="@dimen/font_size_10"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/line_height"
                    android:background="@color/light_gray"
                    android:layout_marginTop="@dimen/font_size_10"
                    />
                <TextView
                    android:id="@+id/order_hotel_danbaorule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/gray_color"
                    android:layout_margin="@dimen/font_size_10"
                    />

            </LinearLayout>
            <include
                layout="@layout/crad_layout"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height_45"
                android:orientation="horizontal"
                >
                <CheckBox
                    android:id="@+id/isknow_order_rule"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/title_bar_height_45"
                    android:textSize="12dp"
                    android:checked="false"
                    android:textColor="@color/colorPrimary"
                    android:text="我已知晓该酒店的相关预订规则及更改规则。"
                    />

            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_bar_height_45"
                android:background="@drawable/bt_bgd"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:textSize="@dimen/font_size_16"
                android:text="立刻预订"
                android:textColor="@color/white"
                android:onClick="orderHotelFast"
                android:layout_marginTop="@dimen/font_size_10"
                android:layout_marginBottom="@dimen/font_size_10"
                />

        </LinearLayout>

    </ScrollView>
</LinearLayout>
