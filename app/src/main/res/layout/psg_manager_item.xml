<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <LinearLayout
        style="@style/one_line_padding_style"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/font_size_5"
        android:background="@drawable/train_shape_right"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/psg_name_txt"
                style="@style/single_line_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="张三"
                android:textColor="@color/flight_title_txt_color" />

            <TextView
                android:id="@+id/psg_nickname_txt"
                style="@style/single_line_txt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_vertical"
                android:text="Avenue"
                android:textColor="@color/flight_title_txt_color" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center_vertical|right" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="right"
                android:layout_marginRight="10dip"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/psg_idNumber_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="222222222222222222222222"
                    android:singleLine="true"
                    android:textColor="@color/gray_color" />

                <TextView
                    android:id="@+id/psg_mobile_txt"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:singleLine="true"
                    android:text="555555555555555555555555"
                    android:textColor="@color/gray_color" />
            </LinearLayout>

            <Button
                android:id="@+id/del_psg_btn"
                style="@style/text_button_small"
                android:background="@drawable/bt_bgd"
                android:focusable="false"
                android:text="@string/delete_psg_txt"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/psg_check_img"
                style="@style/small_icon_button_style"
                android:layout_weight="1"
                android:src="@mipmap/check_mark"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>